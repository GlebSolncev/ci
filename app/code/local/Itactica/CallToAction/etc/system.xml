<config>
    <sections>
        <itactica_calltoaction translate="label" module="itactica_calltoaction">
            <label>CallToAction</label>
            <tab>itactica</tab>
            <frontend_type>text</frontend_type>
            <sort_order>90</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store><groups>
                <cache translate="label" module="itactica_calltoaction">
                    <label>Cache</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cache_enabled translate="label">
                            <label>Enable Cache</label>
                            <comment><![CDATA[Enabling caching is recommended to improve performance of this widget. Refresh Magento cache after enabling or disabling this setting.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cache_enabled>
                    </fields>
                </cache>
            </groups>
        </itactica_calltoaction>
    </sections>
</config>
