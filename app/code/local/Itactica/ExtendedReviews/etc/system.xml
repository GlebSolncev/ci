<config>
    <sections>
        <itactica_extendedreviews translate="label" module="itactica_extendedreviews">
            <label>Extended Reviews</label>
            <tab>itactica</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <reviews translate="label" module="itactica_extendedreviews">
                    <label>Extended Reviews</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <num_reviews translate="label">
                            <label>Number of Reviews (Product Page)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </num_reviews>
                        <max_words_preview translate="label comment">
                            <label>Number of Words for Preview</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Limit the number of words to display before the "Read More" link. Enter 0 for unlimited.]]></comment>
                        </max_words_preview>
                        <static_block translate="label">
                            <label>Static Block at Review Submission Form</label>
                            <frontend_type>select</frontend_type>
                            <source_model>itactica_extendedreviews/system_config_source_tips</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Adds a static block after submit button on review's form. Use this block to add tips and guidelines on how to write a proper review.]]></comment>
                        </static_block>
                    </fields>
                </reviews>
            </groups>
        </itactica_extendedreviews>
    </sections>
</config>
