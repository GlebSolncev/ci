<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.info">
            <block type="itactica_extendedreviews/helper" name="product.reviews" as="ratings-reviews" template="itactica_extendedreviews/product_review.phtml" after="additional">
                <action method="addToParentGroup">
                    <group>detailed_info</group>
                </action>
                <action method="setTitle" translate="value">
                    <value>Reviews</value>
                </action>
            </block>
        </reference>
    </catalog_product_view>   
    <review_product_list>
        <reference name="content">
            <remove name="product.info" />
            <block type="review/product_view" name="extendedreviews.product.info" template="review/product/view.phtml">
                <block type="catalog/product_view_media" name="product.info.media" as="media" template="catalog/product/view/media.phtml">
                    <action method="disableGallery"/>
                </block>
                <block type="core/template" name="product.info.other" as="other" template="review/product/view/other.phtml"/>
                <block type="itactica_extendedreviews/product_review_list_toolbar" name="product_review_list.toolbar" />
                <block type="core/template" name="product_review_list.count" template="review/product/view/count.phtml" />
                <block type="itactica_extendedreviews/product_review_list" name="product.info.product_additional_data" as="product_additional_data" template="itactica_extendedreviews/list/list.phtml">
                    <block type="itactica_extendedreviews/form" name="product.review.form" as="review_form">
                        <block type="page/html_wrapper" name="product.review.form.fields.before" as="form_fields_before" translate="label">
                            <label>Review Form Fields Before</label>
                            <action method="setMayBeInvisible">
                                <value>1</value>
                            </action>
                        </block>
                    </block>
                </block>
            </block>
        </reference>
    </review_product_list>
</layout>