                $("qty").observe('change', function(){
                    if ($(this).getValue() == 10) {
                        $("qty-wrapper").update('<input type="number" name="qty" id="qty" value="<?php echo $this->getProductDefaultQty() * 1 ?>" size="4" title="<?php echo $this->__('Qty') ?>" maxlength="10" class="qty-input-text" />');
