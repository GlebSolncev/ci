            <?php echo $this->getChildHtml('product_view_block_2') ?>
	</div>
	<?php endif; ?>
	<div class="product-description">
		<h3><?php echo $this->__('Product Description') ?></h3>
		<div itemprop="description"><?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') ?></div>
	</div>
<?php endif; ?>
