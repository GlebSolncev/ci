<?php if ($cta): ?>
<div class="row cta-<?php echo $uniqId; ?> show-for-medium-up cta-ribbon<?php if (!$cta->getFullWidth()) echo ' padded'; ?><?php if ($cta->getCustomClassname()) echo ' ' . $cta->getCustomClassname() ?>" style="background-color: <?php echo $helper->hex($cta->getBackgroundColor()); ?>; <?php if ($cta->getBackgroundImage()): ?>background: url(<?php echo Mage::helper('itactica_calltoaction/image')->getImageBaseUrl() . $cta->getBackgroundImage(); ?>) center center no-repeat; <?php endif; ?>margin-top: <?php echo $cta->getMarginTop(); ?>; margin-bottom: <?php echo $cta->getMarginBottom(); ?>">
